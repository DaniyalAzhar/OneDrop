<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="30dp" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Personal Information"
            android:textAppearance="?android:attr/textAppearanceLarge" 
           	android:layout_centerHorizontal="true"
           	/>

    </RelativeLayout>
    <ScrollView 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">
        <ProgressBar
                android:id="@+id/progressBar1"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_marginLeft="80dp"
                android:layout_height="wrap_content"
                 />
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginRight="5dp" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
            	android:textSize="15dp"
                android:text="Email"
                android:textStyle="bold"
        		android:typeface="sans" />
            
        </LinearLayout>

       
        <TextView
                android:id="@+id/donor_info_username"
                android:layout_width="wrap_content"
            	android:layout_height="30dp"
            	android:textSize="15dp"
                android:text="asadkhan" 
                android:inputType="none"/>
         
    </LinearLayout>
    <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_marginLeft="80dp"
                android:layout_height="wrap_content"
                 />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        
        

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Name"
                android:textSize="15dp"
                android:textStyle="bold"
                android:typeface="sans" />            

        </LinearLayout>

        <TextView
            android:id="@+id/donor_info_name"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:inputType="none"
            android:text="Saad Khan"
            android:textSize="15dp" />
        
    </LinearLayout>

    <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_marginLeft="80dp"
                android:layout_height="wrap_content"
                 />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginRight="5dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
            	android:textSize="15dp"
                android:text="Password"
                android:textStyle="bold"
        		android:typeface="sans"
                 />
            
        </LinearLayout>

        <TextView
            android:id="@+id/donor_info_password"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="0.90"
            android:inputType="none"
            android:text="****"
            android:textSize="15dp" />

    </LinearLayout>
    <ProgressBar
                android:id="@+id/progress"
                style="?android:attr/progressBarStyleHorizontal"
               	android:layout_width="match_parent"
                android:layout_marginLeft="80dp"
                android:layout_height="wrap_content"
                 />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginRight="5dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
            	android:textSize="15dp"
                android:text="Blood Group"
                android:textStyle="bold"
        		android:typeface="sans" />
            
        </LinearLayout>

       
        <TextView
                android:id="@+id/donor_info_bloodGroup"
                android:layout_width="wrap_content"
            	android:layout_height="30dp"
            	android:textSize="15dp"
                android:text="O+" 
                android:inputType="none"/>
         
    </LinearLayout>
    <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_marginLeft="80dp"
                android:layout_height="wrap_content"
                 />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginRight="5dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
            	android:textSize="15dp"
                android:text="Area"
                android:textStyle="bold"
        		android:typeface="sans"
                                />
            
        </LinearLayout>

        <TextView
            android:id="@+id/donor_info_area"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="0.90"
            android:inputType="none"
            android:text="F-11, Islamabad"
            android:textSize="15dp" />

      

    </LinearLayout>

    <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_marginLeft="80dp"
                android:layout_height="wrap_content"
                 />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
            	android:textSize="15dp"
                android:text="Contact"
                android:textStyle="bold"
        		android:typeface="sans"
                 />
        </LinearLayout>

        <TextView
            android:id="@+id/donor_info_contact"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="0.90"
            android:inputType="none"
            android:text="0343_3073727"
            android:textSize="15dp" />

    </LinearLayout>
    <ProgressBar

                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_marginLeft="80dp"
                android:layout_height="wrap_content"
                 />
    </LinearLayout>
</ScrollView>

    <Button
        android:id="@+id/btnEditInfo"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_view"
        android:text="Edit Info"
        android:layout_margin="10dp" />

</LinearLayout>
