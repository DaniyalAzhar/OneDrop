<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="15dp">

    

     <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <LinearLayout 
    		android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:orientation="vertical">
            
            <requestFocus />
    
   			 <TextView
        		android:id="@+id/textView1"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:text="Full Name" />

   			 <EditText
   			     android:id="@+id/etNewDonorName"
   			     android:layout_width="match_parent"
   			     android:layout_height="30dp"
   			     android:background="#D8D8D8"
   			     android:ems="10"
   			     android:inputType="textCapWords" >

   			     
   			 </EditText>
   			 <TextView
        		android:id="@+id/tvMail"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:text="Email" />

   			 <EditText
   			     android:id="@+id/etDonorEmail"
   			     android:layout_width="match_parent"
   			     android:layout_height="30dp"
   			     android:background="#D8D8D8"
   			     android:ems="10"
   			     android:inputType="textEmailAddress" >

   			     
   			 </EditText>

		    <TextView
		        android:id="@+id/textView6"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:text="Password" />
	
    		<EditText
        		android:id="@+id/etNewDonorPassword"
        		android:layout_width="match_parent"
        		android:layout_height="30dp"
        		android:ems="10"
        		android:inputType="textPassword"
        		android:background="#D8D8D8" />
	
    		<TextView
        		android:id="@+id/textView7"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:text="Confirm Password" />
			
    		<EditText
        		android:id="@+id/etNewDonorConfirmPassword"
        		android:layout_width="match_parent"
        		android:layout_height="30dp"
        		android:ems="10"
        		android:inputType="textPassword"
        		android:background="#D8D8D8" />
		
    		<TextView
        		android:id="@+id/textView2"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:text="Blood Group" />
	
    		<Spinner
        		android:id="@+id/newDonorBloodGroup"
        		android:layout_width="match_parent"
        		android:layout_height="30dp"
        		android:entries="@array/blood_groups"
        		android:prompt="@string/BloodGroup_prompt"
        		android:background="#D8D8D8" />

    		<TextView
    		    android:id="@+id/textView8"
    		    android:layout_width="wrap_content"
    		    android:layout_height="wrap_content"
    		    android:text="Area" />

    		<EditText 
    		    android:id="@+id/etNewDonorArea"
    		    android:layout_width="match_parent"
    		    android:layout_height="30dp"
    		    android:background="#D8D8D8"
    		    android:ems="10" />
    		<TextView
        		android:id="@+id/textView4"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:text="Contact Number" />
    		<EditText
        		android:id="@+id/etNewDonorContact"
        		android:layout_width="match_parent"
        		android:layout_height="30dp"
        		android:ems="10"
        		android:inputType="phone"
        		android:background="#D8D8D8" />
	
    		<Button
        		android:id="@+id/bSignUp"
        		style="?android:attr/buttonStyleSmall"
        		android:layout_width="fill_parent"
        		android:layout_height="wrap_content"
        		android:text="Sign Up"
        		android:layout_marginTop="15dp"
        		android:background="@drawable/button_view" />

		</LinearLayout>
	</ScrollView>
</LinearLayout>	

