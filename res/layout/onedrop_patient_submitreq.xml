<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp" >
    
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Full Name" />

    <EditText
        android:id="@+id/requiredInfo_patientName"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#D8D8D8"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blood Group Required" />

    <Spinner
        android:id="@+id/requiredInfo_patientBloodGroup"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:entries="@array/blood_groups"
        android:prompt="@string/BloodGroup_prompt"
        android:background="#D8D8D8" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Area" />
    <EditText
        android:id="@+id/requiredInfo_patientPlace "
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#D8D8D8"
        android:ems="10" />
    
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Age" />

    <EditText
        android:id="@+id/requiredInfo_patientAge"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:ems="10"
        android:background="#D8D8D8" 
        android:inputType="number"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender" />
    
     <RadioGroup
        android:id="@+id/requiredInfo_radioGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
 
        <RadioButton
            android:id="@+id/requiredInfo_radioMale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male" 
            android:checked="true" />
 
        <RadioButton
            android:id="@+id/requiredInfo_radioFemale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female" />
 
    </RadioGroup>
    
    

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Number" />

    <EditText
        android:id="@+id/requiredInfo_patientContact"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:ems="10"
        android:inputType="phone"
        android:background="#D8D8D8" />

    <Button
        android:id="@+id/requiredInfo_FindDonor"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_view"
        android:text="Find Donor"
        android:layout_marginTop="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/requiredInfo_PatientCode"
            android:layout_width="148dp"
            android:layout_height="30dp"
            android:padding="2dp"
            android:layout_gravity="left"
            android:layout_marginRight="10dp"
            android:layout_weight="0.58"
            android:background="#D8D8D8"
            android:ems="10"
            android:gravity="left"
            android:hint="Enter Patient Code" />

        <Button
            android:id="@+id/requiredInfo_bUpdates"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="120dp"
            android:layout_height="30dp"            
            android:background="@drawable/button_view_2"
            android:padding="5dp"
            android:text="Check Updates" />
    </LinearLayout>
    
    

    
</LinearLayout>
</ScrollView>